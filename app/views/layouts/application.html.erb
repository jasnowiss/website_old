<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="">
  <meta name="author" content="">

  <title><%= full_title(yield(:title)) %></title>

  <!-- Favicon -->
  <%= favicon_link_tag 'other/personal_logo.ico' %>

  <!-- CSS -->
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <!-- Bootstrap Core CSS -->
  <%= stylesheet_link_tag 'bootstrap.min' %>

  <!-- Custom CSS -->
  <%= stylesheet_link_tag 'personalized' %>

  <!-- Other useful CSS stuff -->
  <%= stylesheet_link_tag 'other' %>

  <!-- Custom Fonts -->
  <%= stylesheet_link_tag 'https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css', type: 'text/css' %>
  <%= stylesheet_link_tag 'https://fonts.googleapis.com/css?family=Montserrat:400,700', type: 'text/css' %>
  <%= stylesheet_link_tag 'https://fonts.googleapis.com/css?family=Kaushan+Script', type: 'text/css' %>
  <%= stylesheet_link_tag 'https://fonts.googleapis.com/css?family=Droid+Serif:400,700,400italic,700italic', type: 'text/css' %>
  <%= stylesheet_link_tag 'https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700', type: 'text/css' %>

  <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
  <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
  <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
  <![endif]-->

  <%= csrf_meta_tags %>

</head>

<body id="page-top" class="index">

  <!-- Navigation -->
  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header page-scroll">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to image_tag("application/personal_logo.png", id: "personallogo", title: "Home"), root_path, :class => "navbar-brand page-scroll" %>
        <!-- <a class="navbar-brand page-scroll" href="#page-top">Jeffrey Snowiss</a> -->
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">
          <li class="hidden">
            <a href="#page-top"></a>
          </li>
          <li>
            <%= link_to "About", about_path %>
          </li>
          <li>
            <%= link_to "Projects/Work", experience_path %>
          </li>
          <li>
            <%= link_to "Resume", resume_path %>
          </li>
          <li>
            <%= link_to "For Fun", fun_path %>
          </li>
         <!--  <li>
            <a class="page-scroll" href="#about">About</a>
          </li>
          <li>
            <a class="page-scroll" href="#team">Team</a>
          </li>
          <li>
            <a class="page-scroll" href="#contact">Contact</a>
          </li> -->
        </ul>
      </div>
      <!-- /.navbar-collapse -->
    </div>
    <!-- /.container-fluid -->
  </nav>

  <!-- JavaScript -->
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => false %>

  <!-- jQuery plugins, because the Rails default ones screwed me. And now these are too... -->
  <%= javascript_include_tag 'https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.4/jquery.min.js' %>

  <!-- Bootstrap Core JavaScript -->
  <%= javascript_include_tag 'bootstrap.min' %>

  <!-- Plugin JavaScript -->
  <%= javascript_include_tag 'classie' %>
  <%= javascript_include_tag 'cbpAnimatedHeader' %>

  <!-- Contact Form JavaScript -->
  <%= javascript_include_tag 'jqBootstrapValidation' %>
  <%= javascript_include_tag 'contact_me' %>

  <!-- Custom Theme JavaScript -->
  <%= javascript_include_tag 'agency' %>

  <!-- Other Useful JavaScript Stuff -->
  <%= javascript_include_tag 'other' %>

  <%= yield %>

</body>

</html>
